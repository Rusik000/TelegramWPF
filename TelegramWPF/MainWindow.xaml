<Window x:Class="TelegramWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" 
              Background="#5682a3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Background="Transparent"
                    HorizontalContentAlignment="Left"
                    BorderThickness="0"
                    Cursor="Hand">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="8*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0"
                               Width="30"
                               Height="30"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="Photo/menu_24px.png"
                                        Stretch="Fill"></ImageBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Label Grid.Column="1"
                           Foreground="White"
                           FontSize="25"
                           Content="Telegram"
                           Margin="10, 0, 0, 0"
                           VerticalAlignment="Center"/>
                </Grid>
            </Button>
            <Grid Grid.Column="1"
                       Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0"
                       DockPanel.Dock="Left"
                       Foreground="White"
                       FontSize="35"
                       Content="Messi Mehle"
                       VerticalAlignment="Center"/>
                <Ellipse Grid.Column="0" 
                                     Width="50"
                                     Height="50">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="Photo/Messi.JPG"
                                                Stretch="Fill"/>
                    </Ellipse.Fill>
                </Ellipse>
                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Rectangle Height="35"
                               Width="35">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="Photo/search_24px.png"></ImageBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Button>
                <Button Grid.Column="2"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Rectangle Height="40"
                               Width="40">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="Photo/menu_vertical_24px.png"
                                        Stretch="Fill"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Background="#fff">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0"
                         Text="Search"
                         FontSize="20"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0"
                         Name="SearchTxtBx"
                         MouseEnter="SearchTxtBx_MouseEnter"
                         MouseLeave="SearchTxtBx_MouseLeave"/>
                <UniformGrid Grid.Row="1" Columns="1">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Grid.Column="0" 
                                     Width="50"
                                     Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="Photo/Messi.JPG"
                                                Stretch="Fill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Foreground="Black"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Content="Messi Mehle"/>
                                <Label Grid.Row="1"
                                       Foreground="Black"
                                       FontSize="15"
                                       Content="De Senol? Onda Sacimi duzeldim aasjasj"/>
                            </Grid>
                        </Grid>
                    </Button>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Grid.Column="0" 
                                     Width="50"
                                     Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="Photo/Ronaldo.JPG"
                                                Stretch="Fill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Foreground="Black"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Content="Ronaldo Kurs IELTS"/>
                                <Label Grid.Row="1"
                                       Foreground="Black"
                                       FontSize="15"
                                       Content="Brat oz aramizdi Messi artistlik eliyir "/>
                            </Grid>
                        </Grid>
                    </Button>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Grid.Column="0" 
                                     Width="50"
                                     Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="Photo/Mbappe.JPG"
                                                Stretch="Fill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Foreground="Black"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Content="Mbpappe DSX "/>
                                <Label Grid.Row="1"
                                       Foreground="Black"
                                       FontSize="15"
                                       Content="Qaga siqareti tutdular evden("/>
                            </Grid>
                        </Grid>
                    </Button>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Grid.Column="0" 
                                     Width="50"
                                     Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="Photo/Trainer.JPG"
                                                Stretch="Fill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Foreground="Black"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Content="Trainer Barcelona"/>
                                <Label Grid.Row="1"
                                       Foreground="Black"
                                       FontSize="15"
                                       Content="Coreyimizi yeyib e Messi ne bilim vallah"/>
                            </Grid>
                        </Grid>
                    </Button>
                </UniformGrid>
            </Grid>

            <Border Grid.Column="1" Background="DarkGray"></Border>
            <Grid Grid.Column="2"
                  Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0">
                    <Image Source="Photo/TelegramChat.JPEG"
                           Stretch="Fill"></Image>
                </Border>
                <Grid Grid.Row="1" Margin="0,0.4,-0.2,0.2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             Background="Transparent"
                             BorderThickness="0"
                             Text="Write a message..."
                             FontSize="15"
                             Name="MessageTxtBX"
                             MouseEnter="TextBox_MouseEnter"
                             MouseLeave="MessageTxtBX_MouseLeave"
                             ></TextBox>
                    <Button Grid.Column="1"
                         
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Ellipse Width="70"
                                 Height="65">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="Photo/telegram_app_48px.png" Stretch="Fill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
